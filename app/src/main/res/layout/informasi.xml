<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="11dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:background="@drawable/toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:drawableRight="@drawable/info_bg"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:textSize="20sp"
            android:text="Informasi"/>
    <TextView
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/red_smooth"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Bagi Yang Melakukan Lupa Absen,"/>

    <TextView
        android:textColor="@color/red_smooth"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Harap Mengisi Form Lupa Absen di Ruang HRD,"/>

    <TextView
        android:textColor="@color/red_smooth"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Jika Tidak Mengisi Form Lupa Absen, Maka Lupa Absen Tidak Akan Di Hitung!"/>
    <TextView
        android:textColor="@color/red_smooth"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:paddingBottom="25dp"
        android:text="Terima Kasih"/>
        <Button
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="OK"
            android:id="@+id/btnInformasiOK"
            android:layout_marginBottom="10dp"/>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewAPPINFORMASI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:adSize="BANNER"
            app:adUnitId="@string/APP_ADMOB_ID_BANNER"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </com.google.android.gms.ads.AdView>
</LinearLayout>
</androidx.cardview.widget.CardView>